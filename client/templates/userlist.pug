doctype html
html(lang='de')
    head
        title= "Home"
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='/styles/list.css')
    link(rel='stylesheet' href='/styles/buttons.css')
    link(rel='stylesheet' href='/styles/labels.css')
    link(rel='stylesheet' href='/styles/tables.css')       
body
    table
        tr
            th= "Name"
            th= "Role"
            th= ""
        each user_o in allLocalEvents_apl
            tr
                td= user_o.name_s
                td= user_o.Role
                td 
                    button(formaction=`/user/delete/${user_o.id_s}` formmethod="POST" class="e-button")= "Delete" 
    form
        div 
            label="New User"
        div 
            label= "Name"
            input(type="text" id="Name" name="name" value="" required)
        div 
            label="Passwort"
            input(type="text" id="Password" name="password" value="" required)
        div
            button(formaction=`/user/create/0` formmethod="POST" class="e-button")= "Speichern" 

