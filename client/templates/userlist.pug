doctype html
html(lang='de')
    head
        title= "Home"
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='/styles/list.css')
    link(rel='stylesheet' href='/styles/buttons.css')
    link(rel='stylesheet' href='/styles/labels.css')
    link(rel='stylesheet' href='/styles/tables.css')       
body
    table
        tr
            th= "Name"
            th= "Role"
            th= ""
        each user_o in allLocalEvents_apl
            tr
                td= user_o.name_s
                td= user_o.Role
                td 
                    a(href=`/user/${user_o.id_s}`)= user_o.name_s
    form
        div 
            label="New User"
            button(formaction=`/organizer/usersettings` formmethod="GET" class="e-button")= "User Management"        

